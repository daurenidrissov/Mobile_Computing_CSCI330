<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background">
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Cookies:"
            android:textStyle="bold"
            android:textSize="64px"
            android:textColor="@android:color/holo_red_light"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:textStyle="bold"
            android:textSize="100px"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/holo_red_light"
            android:text="0"/>

        <Button
            android:id="@+id/button_add_one"
            android:text="+1"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginTop="100px"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_add_one_per_sec"
            android:text="+1 per second (10)"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginTop="100px"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_add_two_per_sec"
            android:text="+2 per second (20)"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginTop="100px"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_add_five_per_sec"
            android:text="+5 per second (50)"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginTop="100px"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_add_ten_per_sec"
            android:text="+10 per second (100)"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginTop="100px"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>